    system.add_option('--cdrom-write-offset',
                      action='store',
                      type='int',
                      metavar='INT',
                      dest='system_cdrom_write_offset',
                      help=OPT_AT_CONFIG_WRITE_OFFSET)

    system.add_option(
        '--fs-encoding',
        action='store',
        metavar='ENCODING',
        dest='system_fs_encoding',
        help=OPT_AT_CONFIG_FS_ENCODING)

    system.add_option(
        '--io-encoding',
        action='store',
        metavar='ENCODING',
        dest='system_io_encoding',
        help=OPT_AT_CONFIG_IO_ENCODING)

    parser.add_option_group(system)

    transcoding = audiotools.OptionGroup(parser, OPT_CAT_TRANSCODING)

