.SUFFIXES: .pdf .bdx .bpx .dot

.bdx.pdf:
	./bitdiagram.py -i $< -o $@

.bpx.pdf:
	./bitparse.py -i $< -o $@

.dot.pdf:
	dot -Tpdf $< -o $@

